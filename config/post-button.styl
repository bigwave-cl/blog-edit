.post-button {
  margin-top: 50px;

  .btn {
    color: $read-more-color;
    font-size: $read-more-font-size;
    background: $read-more-bg-color;
    border-radius: $read-more-border-radius;
    line-height: 2;
    margin: 0 4px 8px 4px;
    position: relative;
    border-bottom-color: transparent !important;
    &::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      bottom: 0;
      left: 0;
      background-color: #000;
      visibility: hidden;
      transform: scaleX(0);
      the-transition();
    }
    &:hover::before {
      visibility: visible;
      transform: scaleX(1);
    }
  }
  .btn:hover {
    @extend .btn:hover;
  }
  .fa-fw {
    width: (18em / 14);
    text-align: left;
  }
}
